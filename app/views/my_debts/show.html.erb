<div class="page-header">
  <h3>My Debt #<%= @my_debt.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Initiator</dt>
      <dd>
        <% if @my_debt.initiator.present? %>
          <a href="/users/<%= @my_debt.initiator_id %>">
            <%= @my_debt.initiator.email %>
          </a>
        <% end %>
      </dd>

      <dt>Receiver</dt>
      <dd>
        <% if @my_debt.receiver.present? %>
          <a href="/users/<%= @my_debt.receiver_id %>">
            <%= @my_debt.receiver.email %>
          </a>
        <% end %>
      </dd>

      <dt>Current amount</dt>
      <dd><%= @my_debt.current_amount %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/my_debts" class="btn btn-primary">
        Back
      </a>
      <a href="/my_debts/<%= @my_debt.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_my_debt/<%= @my_debt.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
